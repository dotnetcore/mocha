<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Google.Protobuf" Version="3.24.3" />
        <PackageReference Include="Grpc.Net.Client" Version="2.52.0" />
        <PackageReference Include="Grpc.Tools" Version="2.58.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
    <ItemGroup>
        <Protobuf Include="$(RepoRoot)\proto\otlp\opentelemetry\proto\**\*.proto" 
                  ProtoRoot="$(RepoRoot)\proto\otlp" 
                  OutputDir="%(RelativePath)generated" 
                  CompileOutputs="false" />
    </ItemGroup>
    <ItemGroup>
        <Protobuf Include="$(RepoRoot)\proto\distributor\**\*.proto">
            <ProtoRoot>$(RepoRoot)\proto\distributor</ProtoRoot>
            <OutputDir>%(RelativePath)generated\distributor</OutputDir>
            <AdditionalImportDirs>$(RepoRoot)\proto\otlp</AdditionalImportDirs>
            <CompileOutputs>false</CompileOutputs>
        </Protobuf>
    </ItemGroup>
</Project>
